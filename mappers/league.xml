<!-- 	시즌 정보	 -->

	<select id="info_season" parameterType="map" resultType="map">
	
		SELECT
			*
		FROM
			Season
		WHERE
			season = #{season}
			
	</select>
	
	
<!--	라운드 생성		-->

	<insert id="insert_round" parameterType="map">
	
		INSERT
			INTO Round (
				round,
				versus
			)
			VALUES (
				#{round},
				#{versus}
			)
	
	</insert>
	
	
<!--	라운드 업데이트		-->

	<update id="update_round" parameterType="map">
		
		UPDATE
			Season
		SET
			round = #{round}
		WHERE
			season = #{season}
		
	</update>
	
	
<!-- 	라운드 정보	 -->

	<select id="info_round" parameterType="map" resultType="map">
	
		SELECT
			*
		FROM
			Round
		WHERE
			round = #{round}
			
	</select>	
</mapper>